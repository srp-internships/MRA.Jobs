                                </div>
                            </div>
                            <MudText Typo="Typo.h6">
                                @ContentService["Home:MobileServiceDescription"]
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </a>
            </MudItem>
            <MudItem xs="12" md="6">
                <a Href="https://www.silkroadprofessionals.com/service/desktop/" Target="_blank">
                    <MudCard Class="rounded-lg mud-elevation-4" Style="padding: 10px;">
                        <MudCardContent>
                            <div class="d-flex flex-grow-1">
                                <div class="flex-none d-flex ">
                                    <MudIcon Icon="@Icons.Material.Filled.Laptop" Size="Size.Large"/>
                                </div>

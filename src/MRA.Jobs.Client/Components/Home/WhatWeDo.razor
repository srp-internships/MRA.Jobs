                        </MudCardContent>
                    </MudCard>
                </a>
            </MudItem>
            <MudItem xs="12" md="6">
                <a Href="https://www.silkroadprofessionals.com/service/cloud/" Target="_blank">
                    <MudCard Class="rounded-lg mud-elevation-4" Style="padding: 10px;">
                        <MudCardContent>
                            <div class="d-flex flex-grow-1">
                                <div class="flex-none d-flex ">
                                    <MudIcon Icon="@Icons.Material.Filled.Cloud" Size="Size.Large"/>
                                </div>
                                <div class="flex-initial d-flex ">
                                    <MudText Typo="Typo.h5" Style="padding-top: 3px;">
                                        <b> @ContentService["Home:CloudServiceTitle"]</b>

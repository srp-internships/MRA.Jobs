@using MRA.Jobs.Application.Contracts.Common;
@using MRA.Jobs.Application.Contracts.JobVacancies.Responses;
@using MRA.Jobs.Application.Contracts.VacancyCategories.Responses;
@using MRA.Jobs.Client.Services.VacancyServices

@inject IVacancyService VService
@inject ICategoryService CService
@inject HttpClient _http;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        @*<div class="image"> <img src="images/SRP_icon.png" class="img" /></div>*@
        <a class="navbar-brand" href="">MRA Jobs</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/category">
                <span class="oi oi-project" aria-hidden="true"></span>Category
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="user" @onclick="()=>expandSubMenu2=!expandSubMenu2">
                <span class="oi oi-person" aria-hidden="true"></span>User
            </NavLink>
            @if (expandSubMenu2)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="user/1">
                            <span class="oi oi-tags" aria-hidden="true"></span>Applicants
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="user/2">
                            <span class=" oi oi-dial" aria-hidden="true"></span>Reviewers
                        </NavLink>
                    </li>
                </ul>
            }
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/vacancy" >
                <span class="oi oi-briefcase" aria-hidden="true"></span>Vacancy
            </NavLink>
        </div>
            
    </nav>
</div>

@code{
    private bool collapseNavMenu = true;
    private bool expandSubMenu;
    private bool expandSubMenu2;
    bool panelOpenState;

    protected override async Task OnInitializedAsync()
    {
      
    }

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

<MatDialog @bind-IsOpen="@IsOpen">
	<MatDialogTitle>Delete Confirmation</MatDialogTitle>
	<MatDialogContent>
		Are you sure you want to delete this item?
	</MatDialogContent>
	<MatDialogActions>
		<MatButton OnClick="ConfirmDelete" Style="background-color:red; color: white">Delete</MatButton>
		<MatButton OnClick="CancelDelete" Style="background-color:gray; color: white">Cancel</MatButton>
	</MatDialogActions>
</MatDialog>

@code {

	[Parameter]
	public bool IsOpen { get; set; }

	[Parameter]
	public EventCallback<bool> IsOpenChanged { get; set; }

	[Parameter]
	public EventCallback OnConfirm { get; set; }

	void ConfirmDelete()
	{
		OnConfirm.InvokeAsync();
		IsOpen = false;
		IsOpenChanged.InvokeAsync(IsOpen);
	}

	void CancelDelete()
	{
		IsOpen = false;
		IsOpenChanged.InvokeAsync(IsOpen);
	}

}